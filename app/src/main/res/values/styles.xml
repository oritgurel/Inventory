<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--ProductListItem Styles-->

    <style name="ProductName" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="itemTitle" parent="ProductName">
        <item name="textSize">12sp</item>
    </style>

</resources>
